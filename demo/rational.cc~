#include <iostream>
#include "../src/rational.h"
#include "../src/mathexcept.h"

using namespace std;
using namespace math;
using namespace math::number;

int main()
{
    Rational r1(1, 2);
    Rational r2(1, 3);
    Rational r3;
    r3 = 2;
    try {
        r3 = Rational(0,0);
    } catch(divide_by_zero& e) {
        cout << "ZÅ‚o!!!!" << endl;
    }
    
    cout << "r1 = " << r1 << endl;
    cout << "r2 = " << r2 << endl;
    cout << "r3 = " << r3 << endl;
    cout << "r1+r2 = " << r1+r2 << endl;
    cout << "r1-r2 = " << r1-r2 << endl;
    cout << "r1*r2 = " << r1*r2 << endl;
    cout << "r1/r2 = " << r1/r2 << endl;
}